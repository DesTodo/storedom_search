<div class="container">
  <div class="row">
    <div class="col-sm-12">

    <!-- search form start IT-2-->
    <%= form_tag items_path %>
      <%= label_tag %> <br>
      <%= text_field_tag :search_term %>
      <%= submit_tag %>
    <% end %>
  
    <!-- search form end  -->



    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%#= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
